<!DOCTYPE html>
<html lang="en">

{% include "head.liquid" %}

<body class='{{ class }} line-numbers {% if tags %}tags-{{tags | join: "-"}}{% endif %} mode-{{env}}' style="{% if background %}background: {{background}} {%endif%}">
    <header class="site__header">
        <h1 class="site__title">
            <a href='/'>{{ site.title }}</a>
        </h1>
        <p class='site__tagline'>{{ site.description }}</p>
    </header>
    {{ content }}

    <script src="{{ '/js/main.js' | url }}"></script>
</body>

</html>