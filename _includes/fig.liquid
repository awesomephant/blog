<figure class="post-figure {{ class }}">
<img alt="{{ alt }}" loading="lazy" src="{{ src }}" />
<figcaption>
{% if caption %}
<span class="figure__caption">
{{ caption | renderMarkdown }}
</span>
{% endif %}
{% if source %}
<span class="figure__source">
{{ source | renderMarkdown }}
</span>
{% endif %}
</figcaption>
</figure>