---
layout: base
class: post
---

<article class="single__container {{ page.class }} section-{{ page.section }}">
  <header class="single__header {% if intro%}has-intro{%endif%}">
    <aside class="single__meta">
      {% if draft %}
      <span>DRAFT</span>
      {% endif %}
      <a href="/" class="post__home">{{ site.title }}</a>
      <span class="post-date post-meta-item">
        <time>
          {{ date | date: "%B %d, %Y" }}
        </time>
        {% if updated %}
        <time class="updated"> Updated {{ updated | date: "%B %d, %Y" }} </time>
        {% endif %}
      </span>
    </aside>
    <h1 class="single__title">
      {% if external_link %}
      <a href="{{ external_link }}">{{ title }}</a>
      {% else%} {% if website %}
      <a href="{{ website }}">{{ title }}</a>
      {% else%}
      {{ title }}
      {% endif %} {% endif %}
    </h1>
    {% if intro %}
    <div class="single__intro">
      {{ intro }}
    </div>
    {% endif %} {% if hero.src %}
    <img class="single__thumb" src="{{ hero.src }}" alt="{{ hero.alt }}" />
    {% endif %}
  </header>
  <div class="single__copy">
    {{ content }}
  </div>
</article>