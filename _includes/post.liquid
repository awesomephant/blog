---
layout: base
class: post
---

<article class="single-post {{ page.class }} section-{{ page.section }}">
  <header class="post-header {% if intro%}has-intro{%endif%}">
    <aside class="post-meta">
      {% if draft %}
      <span>DRAFT</span>
      {% endif %}
      <a href="/">{{site.title}}</a>
      <span class="post-date post-meta-item">
      <time>
        {{ date | date: "%B %d, %Y" }}
      </time>
      {% if updated %}
      <time class="updated">
          Updated {{ updated | date: "%B %d, %Y" }}
        </time>
        {% endif %}
      </span>
    </aside>
    <div class="header-copy">
      {% if hero.src %}
        <img class="post__thumb" src="{{hero.src}}" alt="{{hero.alt}}">
      {% endif %}
      <h1 class="post-title">
        {% if external_link %}
        <a href="{{ external_link }}">{{ title }}</a>
        {% else%} {% if website %}
        <a href="{{ website }}">{{ title }}</a>
        {% else%}
        {{ title }}
        {% endif %} {% endif %}
      </h1>
      {% if intro %}
      <div class="post-intro">
        {{ intro }}
      </div>
      {% endif %}
    </div>
  </header>
  <div class="post-content">
    {{ content }}
  </div>
</article>
