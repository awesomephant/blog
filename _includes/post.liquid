---
layout: base
class: post
---

<article class="single-post {{ page.class }} section-{{ page.section }}">
  <aside class="post-meta">
    {% if draft %}
    <span>DRAFT</span>
    {% endif %}
    <date class="post-date post-meta-item">
      {{ date | date: "%B %d, %Y" }}
    </date>
  </aside>
  {% if spot %}
    {% include "fig.liquid", src: spot.src, caption: spot.caption, class: "post-spot", alt: spot.alt %}
  {% endif %}
  <header class="post-header {% if intro%}has-intro{%endif%}">
    <div class="header-copy">
      <h1 class="post-title">
        {% if external_link %}
        <a href="{{ external_link }}">{{ title }}</a>
        {% else%} {% if website %}
        <a href="{{ website }}">{{ title }}</a>
        {% else%}
        {{ title }}
        {% endif %} {% endif %}
      </h1>
      {% if intro %}
      <div class="post-intro">
        {{ intro | renderMarkdown }}
      </div>
      {% endif %}
    </div>
  </header>
  <div class="post-content">
    {{ content }}
  </div>
</article>
